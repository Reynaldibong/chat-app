<%# message_1 %>
<%= turbo_frame_tag dom_id(message) do %>
  <div class="message border border-white mb-4 p-4" data-user-id="<%= message.user.id %>">
    <div class="message__header flex justify-between text-textColorMain mb-2">
      <div>
       <div class="message__author border-b-2 border-textColorMain">
  <%= message.user.username %>
</div>

      </div>
      <%# message_1_controls %>
      <%= turbo_frame_tag [dom_id(message), "controls"] do %>
        <% if display_controls %>
          <%= render partial: "messages/controls", locals: { message: message } %>
        <% end %>
      <% end %>
    </div>
    <div class="message__body">
      <%= message.body %>
    </div>
  </div>
<% end %>
