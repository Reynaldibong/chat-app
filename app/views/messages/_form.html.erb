<%= form_with(
    model: message, 
    id: "message_form",
    method: :post,
    data: {
        controller: "reset-form",
        action: "turbo:submit-end->reset-form#clearInput"
    },
    class: "p-3 border-t border-borderColor1 flex items-center") do |form| %>
  <%= form.text_field :body, 
  id: "chat-input", 
  class: "flex-grow p-3 rounded-md border border-borderColor1", 
  data: {
    reset_form_target: "input"
  },
  placeholder: "Type Something..." %>
  <%= form.button class: "ml-2 rounded-full text-white w-10 h-10 flex justify-center items-center bg-white" do %>
    <!-- Paper plane icon -->
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="black" class="h-6 w-6 bg-white">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10l9-9m0 0l9 9m-9-9v14"></path>
    </svg>
  <% end %>
  
  
  
  
<% end %>
