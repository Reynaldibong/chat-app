<%# user_1 %>
<%= turbo_stream_from dom_id(current_user) %>
<div class="flex flex-col h-screen bg-gray-100">

  <!-- Header -->
  <div class="text-white p-4 pl-8 shadow-md">
    <h1 class="text-3xl font-bold text-left">Whats Up!</h1>
    <p class="text-lg text-left mt-1">Welcome, <%= current_user.username %>!</p>
  </div>

  <!-- Chatbox -->
  <div id="chatbox" class="flex-1 overflow-y-auto py-4 border-t border-gray-200 h-screen">
    <%= render partial: "messages/chatbox", locals: { messages: @messages } %>
  </div>

  <!-- Message Form -->
  <div class=" border-t border-gray-200 p-4">
    <%= render partial: "messages/form", locals: { message: @message } %>
  </div>

</div>

